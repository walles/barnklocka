<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.walles.johan.johansbarnklocka.MainActivity">

    <com.gmail.walles.johan.johansbarnklocka.AnalogClock
        android:id="@+id/analogClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/digitalClock"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/digitalClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HH:MM"
        app:layout_constraintTop_toBottomOf="@+id/analogClock"/>

</android.support.constraint.ConstraintLayout>

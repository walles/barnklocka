<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.walles.johan.johansbarnklocka.MainActivity">

    <com.gmail.walles.johan.johansbarnklocka.AnalogClock
        android:id="@+id/analogClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/analogReadout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kvart i sju"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/analogClock"/>

    <Button
        android:id="@+id/digitalClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:enabled="false"
        android:gravity="center_vertical|center_horizontal"
        android:text="HH:MM"
        android:textAlignment="gravity"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/digitalReadout"/>

    <Button
        android:id="@+id/digitalReadout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:enabled="false"
        android:text="Arton fyrtiofem"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

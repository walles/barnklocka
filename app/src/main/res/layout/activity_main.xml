<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.walles.johan.johansbarnklocka.MainActivity">

    <com.gmail.walles.johan.johansbarnklocka.AnalogClock
        android:id="@+id/analogClock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/analogReadout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kvart i sju"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:lines="2"
        android:gravity="center_horizontal"
        android:enabled="false"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/digitalClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:enabled="false"
        android:gravity="center_vertical|center_horizontal"
        android:text="HH:MM"
        android:textAlignment="gravity"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/digitalReadout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:enabled="false"
        android:text="Arton fyrtiofem"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

</LinearLayout>
